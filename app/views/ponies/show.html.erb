<h1>Showing Pony</h1>
<p id="notice"><%= notice %></p>

<table class="stack hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pony.name %></td>
      <td><%= @pony.profession %></td>
      <td class="button-group">
        <%= link_to 'Edit', edit_pony_path(@pony), :class => "button secondary hollow", :id => "td-button" %>
        <%= link_to 'Cancel', ponies_path, :class => "button alert" %>
      </td>
    </tr>
  </tbody>
</table>
